<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginLeft="14dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_water_store_check_icon"
                android:text="@string/circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_water_store_title"
                android:text="xxx水店"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <!--<RadioButton-->
            <!--android:id="@+id/rbt_water_store"-->
            <!--android:text="XXX水店"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content" />-->

        <TextView
            android:id="@+id/tv_water_store_address"
            android:layout_marginLeft="20dp"
            android:text="地址"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_water_store_phone"
            android:layout_marginLeft="20dp"
            android:text="电话"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginRight="14dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_water_store_distance"
            android:layout_marginTop="10dp"
            android:text="200m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_water_store_icon"
            android:textSize="25dp"
            android:layout_marginTop="3dp"
            android:layout_gravity="center"
            android:text="@string/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>