<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_address_add_back"
            android:layout_marginLeft="14dp"
            android:textSize="18dp"
            android:text="@string/back"
            android:textColor="#7F7F7F"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="18dp"
            android:textColor="#1a1a1a"
            android:gravity="center"
            android:text="收货地址管理"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <TextView
        android:layout_marginTop="9dp"
        android:background="#E6E6E6"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/rl_address_add_name"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:textSize="18dp"
            android:layout_marginLeft="14dp"
            android:text="收货人"
            android:gravity="center"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <EditText
            android:layout_marginLeft="14dp"
            android:id="@+id/et_address_add_name"
            android:hint="随便写"
            android:layout_marginRight="14dp"
            android:textSize="18dp"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <TextView
        android:background="#E6E6E6"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/rl_address_add_phone"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:textSize="18dp"
            android:layout_marginLeft="14dp"
            android:text="联系电话"
            android:gravity="center"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <EditText
            android:layout_marginLeft="14dp"
            android:id="@+id/et_address_add_phone"
            android:hint="手机号"
            android:digits="0123456789"
            android:maxLength="11"
            android:layout_marginRight="14dp"
            android:textSize="18dp"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <TextView
        android:background="#E6E6E6"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <RelativeLayout
        android:id="@+id/rl_address_add_city"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="14dp"
            android:gravity="center"
            android:text="所在地区"
            android:textColor="#000"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text=">"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tv_address_add_city"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:text="请选择"
            android:textSize="26px" />
    </RelativeLayout>

    <TextView
        android:background="#E6E6E6"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <RelativeLayout
        android:id="@+id/rl_address_add_address2"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:textSize="18dp"
            android:layout_marginLeft="14dp"
            android:text="有无电梯"
            android:gravity="center"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:layout_alignParentRight="true"
            android:text=">"
            android:layout_marginRight="10dp"
            android:textSize="18dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_address_add_address2"
            android:layout_marginRight="30dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textSize="26px"
            android:text="请选择"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <TextView
        android:background="#E6E6E6"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <EditText
        android:id="@+id/et_address_add_detail"
        android:layout_marginRight="14dp"
        android:layout_marginLeft="14dp"
        android:background="#fff"
        android:hint="详细地址"
        android:layout_width="match_parent"
        android:layout_height="100dp" />

    <TextView
        android:background="#E6E6E6"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <RelativeLayout
        android:id="@+id/rl_address_add_default"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:textSize="18dp"
            android:layout_marginLeft="14dp"
            android:text="帐号"
            android:gravity="center"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_address_add_icon"
            android:layout_alignParentRight="true"
            android:text="@string/circle"
            android:layout_marginRight="10dp"
            android:textSize="18dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <RelativeLayout
        android:background="#E6E6E6"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_address_add_save"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:textColor="#fff"
            android:background="#35bb8a"
            android:gravity="center"
            android:text="保存"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
    </RelativeLayout>



</LinearLayout>