<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_help_back"
            android:layout_marginLeft="14dp"
            android:textSize="18dp"
            android:text="@string/back"
            android:textColor="#7F7F7F"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="18dp"
            android:textColor="#1a1a1a"
            android:gravity="center"
            android:text="帮助"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <LinearLayout
        android:layout_below="@+id/rl_title"
        android:orientation="vertical"
        android:background="#e6e6e6"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rl_help_bottom"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_width="match_parent"
            android:background="@drawable/help_layout_background"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/tv_question1"
                android:layout_marginLeft="5dp"
                android:textSize="15dp"
                android:text="我的水还没收到"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="28dp" />
            <TextView
                android:layout_marginLeft="14dp"
                android:background="#E6E6E6"
                android:layout_marginRight="14dp"
                android:layout_width="match_parent"
                android:layout_height="1px" />
            <TextView
                android:id="@+id/tv_question2"
                android:layout_marginLeft="5dp"
                android:textSize="15dp"
                android:text="送水工服务态度有问题"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="28dp" />
            <TextView
                android:layout_marginLeft="14dp"
                android:background="#E6E6E6"
                android:layout_marginRight="14dp"
                android:layout_width="match_parent"
                android:layout_height="1px" />
            <TextView
                android:id="@+id/tv_question3"
                android:layout_marginLeft="5dp"
                android:textSize="15dp"
                android:text="我的余水量不对"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="28dp" />
            <TextView
                android:layout_marginLeft="14dp"
                android:background="#E6E6E6"
                android:layout_marginRight="14dp"
                android:layout_width="match_parent"
                android:layout_height="1px" />
            <TextView
                android:id="@+id/tv_question4"
                android:layout_marginLeft="5dp"
                android:textSize="15dp"
                android:text="我想开户"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="28dp" />
            <TextView
                android:layout_marginLeft="14dp"
                android:background="#E6E6E6"
                android:layout_marginRight="14dp"
                android:layout_width="match_parent"
                android:layout_height="1px" />
            <TextView
                android:id="@+id/tv_question5"
                android:layout_marginLeft="5dp"
                android:textSize="15dp"
                android:text="买水有什么优惠？"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="28dp" />
            <TextView
                android:layout_marginLeft="14dp"
                android:background="#E6E6E6"
                android:layout_marginRight="14dp"
                android:layout_width="match_parent"
                android:layout_height="1px" />
            <TextView
                android:id="@+id/tv_question6"
                android:layout_marginLeft="5dp"
                android:textSize="15dp"
                android:text="为什么需要收取楼层费，收费标准是多少？"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="28dp" />
            <TextView
                android:layout_marginLeft="14dp"
                android:background="#E6E6E6"
                android:layout_marginRight="14dp"
                android:layout_width="match_parent"
                android:layout_height="1px" />
            <TextView
                android:id="@+id/tv_question7"
                android:layout_marginLeft="5dp"
                android:textSize="15dp"
                android:text="怎么退桶？"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="28dp" />
            <TextView
                android:layout_marginLeft="14dp"
                android:background="#E6E6E6"
                android:layout_marginRight="14dp"
                android:layout_width="match_parent"
                android:layout_height="1px" />
        </LinearLayout>

        <ListView
            android:divider="#00000000"
            android:layout_marginLeft="14dp"
            android:id="@+id/lv_help"
            android:layout_marginRight="14dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_help_bottom"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:background="#35bb8a"
            android:id="@+id/tv_help_confirm"
            android:layout_alignParentRight="true"
            android:text="确定"
            android:layout_marginTop="5dp"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:layout_width="80dp"
            android:layout_height="40dp" />
        <EditText
            android:layout_marginTop="5dp"
            android:layout_marginRight="14dp"
            android:layout_toLeftOf="@id/tv_help_confirm"
            android:layout_marginLeft="14dp"
            android:hint="输入问题"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        
    </RelativeLayout>

</RelativeLayout>