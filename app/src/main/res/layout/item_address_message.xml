<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#1a1a1a"
            android:id="@+id/tv_address_name"
            android:text="名字"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_address_phone"
            android:text="123456789"
            android:textColor="#1a1a1a"
            android:layout_marginLeft="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_address_detail"
        android:layout_marginTop="10dp"
        android:textColor="#1a1a1a"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:text="地址"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:background="#E6E6E6"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:id="@+id/ll_address_default"
            android:gravity="center"
            android:layout_marginLeft="14dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_address_defult_circle"
                android:text="@string/circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginLeft="5dp"
                android:id="@+id/tv_address_default"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="设为默认地址"
                android:textColor="#1a1a1a" />

        </LinearLayout>


        <LinearLayout
            android:gravity="center_vertical"
            android:id="@+id/ll_address_delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_delete_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="@string/delete"
                android:textColor="#1a1a1a" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="14dp"
                android:text="删除" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_address_edit"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="25dp"
            android:layout_toLeftOf="@+id/ll_address_delete"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_edit_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/edit" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:text="编辑" />
        </LinearLayout>


    </RelativeLayout>
</LinearLayout>